{
    "GlobalConfiguration": {
        "BaseUrl": "https://localhost:7071"
    },
    "Routes": [{
        "DownstreamPathTemplate": "/api/brands/{id}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [{
            "Host": "localhost",
            "Port": 5001
        }],
        "UpstreamPathTemplate": "/gateway/brands/{id}",
        "UpstreamHttpMethod": ["Get"],
        "AuthenticateOptions": {
            "AuthenticationProvider": "Bearer",
            "AllowedScopes": []
        },
        "LoadBalancerOptions":{
            "Type": "LeastConnection"
        },
        "RateLimitOptions": {
            "EnableRateLimiting": true,
            "Period": "10s",
            "PeriodTimespan": 10,
            "Limit": 3
        },
        "FileCacheOptions": {
          "TtlSeconds": 10,
          "Region" : "getBrandsId"
        },
        "QoSOptions": {
            "ExceptionsAllowedBeforeBreaking": 2,
            "DurationOfBreakL" : 5000,
            "TimeoutValue": 4000
        },
        
        "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
        "DownstreamPathTemplate": "/Auth",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [{
            "Host": "localhost",
            "Port": 7011
        }],
        "UpstreamPathTemplate": "/gateway/Auth",
        "UpstreamHttpMethod": ["Get"],

        "DangerousAcceptAnyServerCertificateValidator": true
    }]
}